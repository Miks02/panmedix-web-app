@{
    ViewData["Title"] = "Home Page";
}

<div class="container mx-auto px-4 py-12 md:py-24 min-h-[92vh] flex items-center">
    <div class="flex flex-wrap items-center justify-between gap-12 w-full">
        
        <div class="flex flex-col gap-8 flex-1 min-w-[300px]">
            <div class="bg-cyan-100 rounded-full px-4 py-2 w-fit border border-green-400">
                <p class="text-cyan-800 uppercase text-xs font-bold tracking-wider ">Dostupno u celoj srbiji</p>
            </div>
            
            <h1 class="text-5xl md:text-7xl lg:text-8xl text-slate-800 font-bold leading-tight">
                Vaši lekovi, <br/> 
                <span class="text-cyan-500">uvek na vreme</span>
            </h1>
            
            <p class="text-lg md:text-2xl font-semibold text-slate-600 leading-relaxed max-w-2xl">
                Mesečna pretplata na lekove koja vam olakšava život. Sigurno, jednostavno i pouzdano rešenje za vas i vaše najmilije.
            </p>
            
            <div class="flex flex-wrap gap-4 mt-4">
                <a href="#" class="px-8 py-4 bg-cyan-400 text-slate-700 rounded-lg font-bold hover:bg-cyan-500/80 transition-all shadow-lg hover:shadow-cyan-200 hover:-translate-y-1">
                    <i class="fa-solid fa-pills mr-2"></i>Pregledaj katalog
                </a>
                <a href="#" class="px-8 py-4 bg-white shadow-lg text-slate-700 outline outline-cyan-400 rounded-lg font-bold hover:bg-slate-50 transition-all hover:-translate-y-1">
                    <i class="fa-solid fa-address-book mr-2"></i>Kontakt
                </a>
            </div>
        </div>
        
        <div class="flex-1 min-w-[300px] lg:min-w-[500px] ">
            <img src="/AppImages/Hero image.png" alt="Hero image" class="w-full transition duration-200 lg:h-[70vh] rounded-3xl shadow-2xl transform hover:scale-[1.02]">
        </div>
        
    </div>
</div>
