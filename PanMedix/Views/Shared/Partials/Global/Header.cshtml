


<header class="h-[8vh] sticky top-0 z-50 bg-gradient-to-br from-cyan-500 to-cyan-600 shadow-xl hover:shadow-2xl transition duration-200">
    <div class="container mx-auto px-4 py-4 flex items-center justify-between">
        <div class="flex-1">
            <h1 class="text-2xl font-bold text-amber-100">PanMedix D.O.O</h1>
        </div>

        <nav class="hidden md:flex flex-1 justify-center">
            <ul class="flex text-xl items-center space-x-6">
                <li>
                    <a asp-controller="Home" asp-action="Index" class="font-semibold text-amber-100 hover:text-white transition duration-200">Početna</a>
                </li>
                <li>
                    <a asp-controller="Catalog" asp-action="Index" class="font-semibold text-amber-100 hover:text-white transition duration-200">Katalog lekova</a>
                </li>
                <li>
                    <a asp-controller="About" asp-action="Index" class="font-semibold text-amber-100 hover:text-white transition duration-200">O nama</a>
                </li>
                <li>
                    <a asp-controller="Contact" asp-action="Index" class="font-semibold text-amber-100 hover:text-white transition duration-200">Kontakt</a>
                </li>
            </ul>
        </nav>

        <div class="flex-1 flex items-center justify-end space-x-4">
            <a asp-controller="Account" asp-action="Login" class="hidden md:inline-block rounded-md shadow-md font-semibold bg-amber-600 px-4 py-2 text-cyan-100 hover:bg-amber-700 transition-all duration-200">
                <i class="fa-solid fa-user mr-2"></i>Prijava
            </a>
            
            <button id="mobile-menu-button" class="md:hidden text-amber-100 text-3xl focus:outline-none hover:text-white transition duration-200">
                <i class="fa-solid fa-bars"></i>
            </button>
        </div>
    </div>

    <div id="mobile-menu" class="max-h-0 overflow-hidden md:hidden bg-cyan-600 transition-all duration-300 ease-in-out">
        <ul class="flex flex-col p-4 space-y-6">
            <li>
                <a asp-controller="Home" asp-action="Index" 
                   class="block text-xl font-semibold text-amber-100 hover:text-white hover:translate-x-2 transition-all duration-200 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Home" && ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "text-white border-l-4 border-amber-500 pl-2" : "")">
                    <i class="fa-solid fa-house mr-3 w-6"></i>Početna
                </a>
            </li>
            <li>
                <a asp-controller="Catalog" asp-action="Index" 
                   class="block text-xl font-semibold text-amber-100 hover:text-white hover:translate-x-2 transition-all duration-200 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Catalog" ? "text-white border-l-4 border-amber-500 pl-2" : "")">
                    <i class="fa-solid fa-book-medical mr-3 w-6"></i>Katalog lekova
                </a>
            </li>
            <li>
                <a asp-controller="About" asp-action="Index" 
                   class="block text-xl font-semibold text-amber-100 hover:text-white hover:translate-x-2 transition-all duration-200 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "About" ? "text-white border-l-4 border-amber-500 pl-2" : "")">
                    <i class="fa-solid fa-circle-info mr-3 w-6"></i>O nama
                </a>
            </li>
            <li>
                <a asp-controller="Contact" asp-action="Index" 
                   class="block text-xl font-semibold text-amber-100 hover:text-white hover:translate-x-2 transition-all duration-200 @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Contact" ? "text-white border-l-4 border-amber-500 pl-2" : "")">
                    <i class="fa-solid fa-envelope mr-3 w-6"></i>Kontakt
                </a>
            </li>
            <li class="pt-4">
                <a asp-controller="Account" asp-action="Login" class="block text-center rounded-md shadow-md font-semibold bg-amber-600 px-4 py-3 text-cyan-100 hover:bg-amber-700 hover:scale-105 transition-all duration-200">
                    <i class="fa-solid fa-user mr-2"></i>Prijava
                </a>
            </li>
        </ul>
    </div>
</header>