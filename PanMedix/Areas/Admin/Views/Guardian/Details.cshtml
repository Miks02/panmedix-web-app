@using PanMedix.ViewModels
@using PanMedix.Enums
@using PanMedix.Helpers

@model GuardianViewModel

@{
    ViewBag.Title = "Detalji staratelja";
    Layout = "_Dashboard";
}

<div class="p-6 space-y-6">
    <div class="flex flex-col md:flex-row md:items-center justify-between gap-4">
        <div class="flex w-full flex-col md:flex-row md:items-center md:justify-between gap-4 bg-cyan-100 p-6 rounded-2xl border border-cyan-200 shadow-sm">
            <div>
                <h1 class="text-3xl font-bold text-cyan-900">Detalji staratelja</h1>
                <p class="text-cyan-700">Pregled detalja staratelja, ukidanje prava na starateljstvo i brisanje iz evidencije</p>
            </div>
        </div>
        
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-3 gap-6">
        <div class="lg:col-span-1 space-y-6">
            <div class="bg-white rounded-3xl shadow-sm border border-cyan-100 overflow-hidden">
                <div class="h-24 bg-gradient-to-r from-cyan-500 to-cyan-600"></div>
                <div class="px-6 pb-6 text-center">
                    <div class="relative inline-block -mt-12 mb-4">
                        <div class="w-32 h-32 rounded-3xl bg-white p-1 shadow-lg mx-auto">
                            <div class="w-full h-full rounded-2xl bg-gradient-to-br from-cyan-100 to-cyan-200 flex items-center justify-center text-cyan-700 font-bold overflow-hidden">
                                <img src="https://ui-avatars.com/api/?background=random&size=128&name=@(Model.FirstName)+@(Model.LastName)" alt="Avatar" class="w-full h-full object-cover">
                            </div>
                        </div>
                    </div>
                    
                    <h2 class="text-2xl font-bold text-cyan-900">@Model.FirstName @Model.LastName</h2>
                    <p class="text-cyan-600 font-medium mb-4 flex items-center justify-center gap-1.5">
                        <i class="fa-solid fa-envelope text-sm"></i>
                        @Model.Email
                    </p>
                    
                    <div>
                        @switch (Model.Status)
                        {
                            case GuardianStatus.Approved:
                                <span class="inline-flex items-center gap-1.5 px-4 py-1.5 rounded-full bg-green-100 text-green-700 text-sm font-bold ring-1 ring-inset ring-green-600/20">
                                    <span class="w-2 h-2 rounded-full bg-green-600"></span>
                                    Odobren
                                </span>
                                break;
                            case GuardianStatus.Pending:
                                <span class="inline-flex items-center gap-1.5 px-4 py-1.5 rounded-full bg-amber-100 text-amber-700 text-sm font-bold ring-1 ring-inset ring-amber-600/20">
                                    <span class="w-2 h-2 rounded-full bg-amber-600 animate-pulse"></span>
                                    Na čekanju
                                </span>
                                break;
                            case GuardianStatus.Denied:
                                <span class="inline-flex items-center gap-1.5 px-4 py-1.5 rounded-full bg-red-100 text-red-700 text-sm font-bold ring-1 ring-inset ring-red-600/20">
                                    <span class="w-2 h-2 rounded-full bg-red-600"></span>
                                    Odbijen
                                </span>
                                break;
                        }
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-3xl shadow-sm border border-cyan-100 p-6">
                <h3 class="text-lg font-bold text-cyan-900 mb-4 flex items-center gap-2">
                    <i class="fa-solid fa-bolt text-cyan-500"></i>
                    Brze akcije
                </h3>
                <div class="flex flex-col gap-3">
                    @if (Model.Status == GuardianStatus.Pending)
                    {
                        <form asp-action="UpdateStatus" method="POST" class="w-full">
                            <input type="hidden" name="status" value="@GuardianStatus.Approved">
                            <input type="hidden" name="userId" value="@Model.Id">
                            <button type="submit" class="w-full px-6 py-3 bg-cyan-600 text-white font-bold rounded-xl hover:bg-cyan-700 transition-all shadow-lg shadow-cyan-100 flex items-center justify-center gap-2">
                                <i class="fa-solid fa-check"></i>
                                Odobri nalog
                            </button>
                        </form>

                        <form asp-action="UpdateStatus" method="POST" class="w-full">
                            <input type="hidden" name="status" value="@GuardianStatus.Denied">
                            <input type="hidden" name="userId" value="@Model.Id">
                            <button type="submit" class="w-full px-6 py-3 border border-red-200 text-red-600 font-bold rounded-xl hover:bg-red-50 transition-all flex items-center justify-center gap-2">
                                <i class="fa-solid fa-xmark"></i>
                                Odbij zahtev
                            </button>
                        </form>
                    }
                    else if (Model.Status == GuardianStatus.Approved)
                    {
                        <form asp-action="UpdateStatus" method="POST" class="w-full">
                            <input type="hidden" name="status" value="@GuardianStatus.Denied">
                            <input type="hidden" name="userId" value="@Model.Id">
                            <button type="submit" class="w-full px-6 py-3 bg-amber-600 text-white font-bold rounded-xl hover:bg-amber-700 transition-all shadow-lg shadow-amber-100 flex items-center justify-center gap-2">
                                <i class="fa-solid fa-xmark"></i>
                                Ukini pravo na starateljstvo
                            </button>
                            <p class="text-center mt-2 text-slate-700 font-semibold text-sm">Ukidanjem prava na starateljstvo skidate sve štićenike sa staratelja</p>
                        </form>
                    }
                    else if (Model.Status == GuardianStatus.Denied)
                    {
                        <form asp-action="UpdateStatus" method="POST" class="w-full">
                            <input type="hidden" name="status" value="@GuardianStatus.NotGuardian">
                            <input type="hidden" name="userId" value="@Model.Id">
                            <button type="submit" class="w-full px-6 py-3 bg-red-600 text-white font-bold rounded-xl hover:bg-red-700 transition-all shadow-lg shadow-red-100 flex items-center justify-center gap-2">
                                <i class="fa-solid fa-trash-can"></i>
                                Obriši iz evidencije
                            </button>
                        </form>
                    }
                    else
                    {
                        <p class="text-cyan-600 text-sm italic text-center py-2">Nema dostupnih akcija za trenutni status.</p>
                    }
                </div>
            </div>
        </div>

        <div class="lg:col-span-2 space-y-6">
            <div class="bg-white rounded-3xl shadow-sm border border-cyan-100 p-8">
                <h3 class="text-xl font-bold text-cyan-900 mb-6 flex items-center gap-2">
                    <i class="fa-solid fa-id-card text-cyan-500"></i>
                    Osnovne informacije
                </h3>
                <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
                    <div class="space-y-1">
                        <span class="text-sm font-semibold text-cyan-500 uppercase tracking-wider">Ime</span>
                        <p class="text-lg font-bold text-cyan-900 bg-cyan-50/50 p-3 rounded-xl border border-cyan-50">@Model.FirstName</p>
                    </div>
                    <div class="space-y-1">
                        <span class="text-sm font-semibold text-cyan-500 uppercase tracking-wider">Prezime</span>
                        <p class="text-lg font-bold text-cyan-900 bg-cyan-50/50 p-3 rounded-xl border border-cyan-50">@Model.LastName</p>
                    </div>
                    <div class="md:col-span-2 space-y-1">
                        <span class="text-sm font-semibold text-cyan-500 uppercase tracking-wider">Email adresa</span>
                        <p class="text-lg font-bold text-cyan-900 bg-cyan-50/50 p-3 rounded-xl border border-cyan-50">@Model.Email</p>
                    </div>
                </div>
            </div>

            <div class="bg-white rounded-3xl shadow-sm border border-cyan-100 p-8">
                <div class="flex items-center justify-between mb-6">
                    <h3 class="text-xl font-bold text-cyan-900 flex items-center gap-2">
                        <i class="fa-solid fa-users text-cyan-500"></i>
                        Povezani štićenici
                    </h3>
                </div>
                
                <div class="bg-gradient-to-br from-cyan-600 to-cyan-700 rounded-3xl p-8 text-white shadow-xl shadow-cyan-100">
                    <div class="flex items-center justify-between">
                        <div>
                            <p class="text-cyan-100 text-sm font-bold uppercase tracking-widest opacity-80">Ukupan broj štićenika</p>
                            <h4 class="text-6xl font-black mt-2">@Model.NumberOfWards</h4>
                            <p class="mt-4 text-cyan-100/70 text-sm">Svi štićenici su povezani putem jedinstvenog koda staratelja.</p>
                        </div>
                        <div class="w-24 h-24 bg-white/10 rounded-3xl flex items-center justify-center text-5xl backdrop-blur-sm border border-white/20">
                            <i class="fa-solid fa-child-reaching"></i>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>




